        }
        .password-box {
            text-align: center;
            margin: 30px auto;
            padding: 20px;
            border: 2px solid gold;
            border-radius: 5px;
            max-width: 400px;
            background-color: rgba(0, 0, 0, 0.5);
        }
        input {
            padding: 8px;
            margin: 10px 0;
            width: 80%;
            background-color: #333;
            color: gold;
            border: 1px solid gold;
            border-radius: 4px;
        }
        button {
            padding: 10px 20px;
            background-color: #333;
            color: gold;
            border: 1px solid gold;
            border-radius: 4px;
            cursor: pointer;
            margin: 5px;
        }
        button:hover {
            background-color: gold;
            color: #333;
        }
        button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        .member-list {
            margin-top: 20px;
            border: 2px solid gold;
            border-radius: 5px;
            padding: 15px;
            background-color: rgba(0, 0, 0, 0.5);
        }
        .member-item {
            display: flex;
            justify-content: space-between;
            padding: 8px;
            border-bottom: 1px solid gold;
        }
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
        }
        .modal-content {
            background-color: #1a1a1a;
            margin: 10% auto;
            padding: 20px;
            border: 2px solid gold;
            border-radius: 10px;
            width: 60%;
            max-width: 500px;
        }
        .close {
            color: gold;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }
        select {
            padding: 8px;
            margin: 10px 0;
            width: 100%;
            background-color: #333;
            color: gold;
            border: 1px solid gold;
            border-radius: 4px;
        }
        .stats {
            margin-top: 20px;
            text-align: center;
            font-size: 1.2em;
        }
        .admin-panel {
            margin-top: 20px;
            padding: 15px;

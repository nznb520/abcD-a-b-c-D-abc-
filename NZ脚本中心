-- 首先导入Flux UI库
local Flux = loadstring(game:HttpGet("https://raw.githubusercontent.com/weakhoes/Roblox-UI-Libs/main/fluxlib.lua"))()

-- 创建窗口
local window = Flux:Window("NZ脚本中心", "欢迎使用NZ脚本中心", Color3.fromRGB(44, 44, 44), Enum.KeyCode.RightControl)

-- 添加标签页
local mainTab = window:Tab("主界面", "rbxassetid://1234567890")
local scriptsTab = window:Tab("脚本", "rbxassetid://1234567890")
local settingsTab = window:Tab("设置", "rbxassetid://1234567890")

-- 主界面标签内容
mainTab:Label("欢迎使用NZ脚本中心")
mainTab:Line()
mainTab:Label("当前版本: v1.0.0")
mainTab:Button("检查更新", function()
    Flux:Notification("已是最新版本", "已是最新版本，无需更新", 5)
end)
mainTab:Line()
mainTab:Label("选择游戏：")

-- 游戏下拉选择
local games = {"通用脚本", "监狱人生", "忍者传奇", "力量传奇", "Blox Fruits"}
local selectedGame = mainTab:Dropdown("选择游戏", games, function(selection)
    Flux:Notification("游戏切换", "已切换到: " .. selection, 3)
end)

-- 脚本标签内容
scriptsTab:Label("脚本列表")
scriptsTab:Line()

-- 创建脚本按钮
scriptsTab:Button("无限跳跃", function()
    loadstring(game:HttpGet("https://example.com/script1.lua", true))()
    Flux:Notification("脚本注入", "无限跳跃脚本已加载", 3)
end)

scriptsTab:Button("飞行脚本", function()
    loadstring(game:HttpGet("https://example.com/script2.lua", true))()
    Flux:Notification("脚本注入", "飞行脚本已加载", 3)
end)

scriptsTab:Button("穿墙脚本", function()
    loadstring(game:HttpGet("https://example.com/script3.lua", true))()
    Flux:Notification("脚本注入", "穿墙脚本已加载", 3)
end)

scriptsTab:Line()
scriptsTab:Toggle("自动执行", false, function(state)
    if state then
        Flux:Notification("自动执行", "已开启自动执行功能", 3)
    else
        Flux:Notification("自动执行", "已关闭自动执行功能", 3)
    end
end)

-- 设置标签内容
settingsTab:Label("设置选项")
settingsTab:Line()

-- 颜色选择器
local currentColor = Color3.fromRGB(44, 44, 44)
settingsTab:Colorpicker("主题颜色", currentColor, function(color)
    -- 这里可以添加更新UI颜色的代码
    Flux:Notification("主题更新", "主题颜色已更新", 3)
end)

-- 滑块设置
settingsTab:Slider("UI透明度", 0, 100, 100, function(value)
    -- 这里可以添加更新UI透明度的代码
    Flux:Notification("透明度设置", "UI透明度已设置为: " .. value .. "%", 2)
end)

settingsTab:Line()
settingsTab:Label("快捷键设置")

-- 绑定按键
local currentKey = "RightControl"
settingsTab:Bind("打开/关闭UI", Enum.KeyCode.RightControl, function()
    window:Close()
end)

settingsTab:Line()
settingsTab:Label("关于")
settingsTab:Button("关于NZ脚本中心", function()
    Flux:Notification("关于", "NZ脚本中心 v1.0.0\n开发者: NZ团队", 5)
end)

settingsTab:Button("加入Discord", function()
    setclipboard("https://discord.gg/example")
    Flux:Notification("链接复制", "Discord链接已复制到剪贴板", 3)
end)

-- 初始化UI
local UIState = {
    AutoExecute = false,
    CurrentGame = "通用脚本",
    ThemeColor = currentColor,
    UITransparency = 100
}

-- 保存函数用于其他脚本调用
local NZScriptCenter = {}

function NZScriptCenter:ExecuteScript(scriptName)
    -- 这里可以添加执行具体脚本的逻辑
    Flux:Notification("脚本执行", "正在执行: " .. scriptName, 3)
end

function NZScriptCenter:GetUIState()
    return UIState
end

function NZScriptCenter:ShowNotification(title, message, duration)
    Flux:Notification(title, message, duration or 3)
end

-- 在游戏启动时显示欢迎消息
task.spawn(function()
    task.wait(2)
    Flux:Notification("欢迎", "欢迎使用NZ脚本中心！", 5)
end)

return NZScriptCenter

    PANEL_BG = Color3.fromRGB(35, 35, 35),          -- 面板背景
    ACCENT_BLUE = Color3.fromRGB(0, 120, 215),      -- 强调蓝色 #0078D7
    ACCENT_PURPLE = Color3.fromRGB(138, 43, 226),   -- 强调紫色 #8A2BE2
    TEXT_WHITE = Color3.fromRGB(255, 255, 255),    -- 白色文字
    TEXT_GRAY = Color3.fromRGB(200, 200, 200),      -- 灰色文字
    BORDER = Color3.fromRGB(60, 60, 60),            -- 边框颜色
    HOVER = Color3.fromRGB(80, 80, 80)             -- 悬停效果
}


local Start = tick()
local ui = loadstring(game:HttpGet("https://pastebin.com/raw/3vQbADjh"))()
local win = ui:new("NZ脚本中心")

local UITab1 = win:Tab("『公告』", "7734068321")
local UITab2 = win:Tab("『功能』", "7734068322")

-- 公告页面
local aboutSection = UITab1:section("『公告』", true)
aboutSection:Label("测试脚本")
aboutSection:Label("文本")

-- 功能页面
local featureSection = UITab2:section("『功能设置』", true)

-- 无限跳
featureSection:Toggle("无限跳", false, function(Value)
    local Jump = Value
    game:GetService("UserInputService").JumpRequest:Connect(function()
        if Jump then
            game.Players.LocalPlayer.Character:WaitForChild("Humanoid"):ChangeState("Jumping")
        end
    end)
end)

-- 视野调节
featureSection:Slider("视野", Workspace.CurrentCamera.FieldOfView, 10, 180, function(FOV)
    spawn(function()
        while task.wait() do
            Workspace.CurrentCamera.FieldOfView = FOV
        end
    end)
end)
)
